<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_tint">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewFriendsItemImage"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@color/main_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="8dp"/>

    <TextView
        android:id="@+id/textViewFriendsItemNickname"
        style="@style/dark_theme_label_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nickname"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewFriendsItemImage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="32dp"/>

    <ImageButton
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@null"
        android:src="@drawable/blubb_delete_icon"
        app:tint="@color/error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"/>

</androidx.constraintlayout.widget.ConstraintLayout>